{% extends 'WhteRbtFileInspectionsBundle::mailTemplate.txt.twig' %}

{% trans_default_domain 'WhteRbtFileInspectionsBundle' %}

{% block subject %}
{% autoescape false %}
{{- 'mail.error.subject'|trans({ '%job%': job, '%inspector%': inspector }) -}}
{% endautoescape %}
{% endblock %}

{% block body %}
{% autoescape false %}
{{-
    'mail.error.body'|trans({
        '%date%': 'now'|date('y-m-d H:i:s'),
        '%file%': file,
        '%filename%': filename,
        '%inspector%': inspector,
        '%job%': job,
        '%path%': path,
    })
-}}
{{ parent() }}
{% endautoescape %}
{% endblock %}
